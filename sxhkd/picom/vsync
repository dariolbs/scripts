#!/usr/bin/sh 
file="$HOME/.config/picom/picom.conf"
if [ -z "$(pidof picom)" ]; then
	notify-send "ðŸ˜¥ Picom is not running!" "Activate picom if you want to use vsync."
else
	state=$(grep "^vsync =" "$file" )
	state=${state##*=}
	if [ $state = "false" ]; then
		sed -i "s/vsync = false/vsync = true/" "$file"
		notify-send -u low "î˜« Vsync in on!"
	else
		sed -i "s/vsync = true/vsync = false/" "$file"
		notify-send -u low "î˜« Vsync in off!"
	fi
fi
